@using SD.WEB.ViewModels

@model TeamsViewModel
@{
    ViewBag.Title = "GetAllTeams";
}

<h3>Entire list of stadiums in the NFL</h3>


<table style="width:100%" class="table">
    <tr>
        <th>Name</th>
        <th>City</th>
        <th>FullName</th>
        <th></th>
    </tr>
    @foreach (var Team in Model.Teams)
    {
        <tr>
            <td>@Team.Name</td>
            <td>@Team.City</td>
            <td>@Team.FullName</td>
            <td>@Html.ActionLink("Team Details", "GetTeam", new { id = Team.TeamID}, new { @class = "navbar-brand btn-success" })</td>
        </tr>
    }


</table>

